{
	"name": "@pdc/service",
	"description": "The service backend for the Philanthropy Data Commons",
	"main": "dist/index.js",
	"scripts": {
		"build": "npm run cleanup && npm run build:node && npm run build:assets",
		"build:node": "tsc -p tsconfig.json",
		"build:assets": "copyfiles -u 1 \"src/**/*.sql\" \"src/**/.keep\" \"src/public/**\" dist",
		"cleanup": "rimraf dist",
		"format": "prettier . --write",
		"lint": "npm run lint:eslint && npm run lint:prettier && npm run lint:tsc && npm run lint:swagger",
		"lint:eslint": "eslint ./src --ext .ts --max-warnings=0",
		"lint:swagger": "swagger-spec-validator src/openapi.json",
		"lint:tsc": "tsc --noEmit -p tsconfig.dev.json",
		"lint:prettier": "prettier . --check",
		"migrate": "ts-node src/scripts/migrate.ts | pino-pretty",
		"start": "ts-node src/index.ts | pino-pretty",
		"test": "npm run test:unit && npm run test:integration",
		"test:unit": "jest --config=jest.config.unit.js",
		"test:integration": "jest --config=jest.config.int.js --runInBand",
		"test:ci": "jest --config=jest.config.ci.js --runInBand"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/PhilanthropyDataCommons/pdc.git"
	},
	"keywords": [
		"Philanthropy",
		"Common",
		"Application",
		"Grant",
		"Management",
		"System"
	],
	"author": "Open Tech Strategies",
	"license": "AGPL-3.0",
	"bugs": {
		"url": "https://github.com/PhilanthropyDataCommons/pdc/issues"
	},
	"homepage": "https://github.com/PhilanthropyDataCommons/pdc#readme",
	"engines": {
		"node": "20"
	},
	"type": "commonjs",
	"devDependencies": {
		"@tsconfig/node20": "^20.1.4",
		"@types/cors": "^2.8.17",
		"@types/express": "^4.17.21",
		"@types/jest": "^28.1.2",
		"@types/node": "^20.16.7",
		"@types/language-tags": "^1.0.4",
		"@types/pg": "^8.11.10",
		"@types/supertest": "^6.0.2",
		"@types/swagger-ui-express": "^4.1.6",
		"@types/uuid": "^10.0.0",
		"@typescript-eslint/eslint-plugin": "^7.18.0",
		"@typescript-eslint/parser": "^7.18.0",
		"copyfiles": "^2.4.1",
		"eslint": "^8.57.0",
		"eslint-config-airbnb-base": "^15.0.0",
		"eslint-config-airbnb-typescript": "^18.0.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-import": "^2.29.1",
		"eslint-plugin-sort-exports": "^0.9.1",
		"jest": "^28.1.1",
		"jsonwebtoken": "^9.0.2",
		"mock-jwks": "^1.0.10",
		"nock": "^13.5.5",
		"pino-pretty": "^11.2.2",
		"prettier": "3.3.3",
		"rimraf": "^6.0.1",
		"supertest": "^7.0.0",
		"swagger-spec-validator": "^5.0.0",
		"ts-jest": "^28.0.5",
		"ts-node": "^10.9.2",
		"typescript": "^5.6.2"
	},
	"dependencies": {
		"@aws-sdk/client-s3": "^3.657.0",
		"@aws-sdk/s3-presigned-post": "^3.657.0",
		"ajv": "^8.17.1",
		"ajv-formats": "^3.0.1",
		"ajv-keywords": "^5.1.0",
		"cors": "^2.8.5",
		"csv-parse": "^5.5.6",
		"express": "^4.21.0",
		"express-jwt": "^8.4.1",
		"graphile-worker": "^0.16.6",
		"jwks-rsa": "^3.1.0",
		"phone": "^3.1.50",
		"language-tags": "^1.0.9",
		"pino": "^9.4.0",
		"pino-http": "^10.3.0",
		"postgres-schema-migrations": "^6.1.0",
		"require-env-variable": "^4.0.2",
		"swagger-ui-dist": "^5.17.14",
		"swagger-ui-express": "^5.0.1",
		"tinypg": "^7.0.0",
		"tmp-promise": "^3.0.3",
		"uuid": "^10.0.0"
	}
}
