{
  "name": "@pdc/service",
  "version": "0.0.0",
  "description": "The service backend for the Philanthropy Data Commons",
  "main": "dist/index.js",
  "scripts": {
    "build": "npm run cleanup && npm run build:node && npm run build:assets",
    "build:node": "tsc -p tsconfig.json",
    "build:assets": "copyfiles -u 1 \"src/**/*.sql\" \"src/**/.keep\" dist",
    "cleanup": "rimraf dist",
    "lint": "eslint ./src --ext .ts",
    "migrate": "node -r dotenv/config dist/scripts/migrate.js",
    "migrate:dev": "ts-node -r dotenv/config src/scripts/migrate.ts | pino-pretty",
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "jest --config=jest.config.unit.js",
    "test:integration": "jest --config=jest.config.int.js --runInBand",
    "test:ci": "jest --config=jest.config.ci.js --runInBand",
    "start": "node dist/index.js",
    "start:dev": "ts-node src/index.ts | pino-pretty"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/PhilanthropyDataCommons/pdc.git"
  },
  "keywords": [
    "Philanthropy",
    "Common",
    "Application",
    "Grant",
    "Management",
    "System"
  ],
  "author": "Open Tech Strategies",
  "license": "AGPL-3.0",
  "bugs": {
    "url": "https://github.com/PhilanthropyDataCommons/pdc/issues"
  },
  "homepage": "https://github.com/PhilanthropyDataCommons/pdc#readme",
  "devDependencies": {
    "@tsconfig/node16": "^1.0.3",
    "@types/express": "^4.17.14",
    "@types/jest": "^28.1.2",
    "@types/node": "^18.0.0",
    "@types/pg": "^8.6.5",
    "@types/supertest": "^2.0.12",
    "@types/swagger-ui-express": "^4.1.3",
    "@typescript-eslint/eslint-plugin": "^5.46.1",
    "@typescript-eslint/parser": "^5.46.1",
    "copyfiles": "^2.4.1",
    "eslint": "^8.29.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-sort-exports": "^0.8.0",
    "jest": "^28.1.1",
    "pino-pretty": "^9.1.1",
    "rimraf": "^3.0.2",
    "supertest": "^6.3.3",
    "ts-jest": "^28.0.5",
    "ts-node": "^10.8.1",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "ajv": "^8.11.2",
    "ajv-keywords": "^5.1.0",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "pino": "^8.7.0",
    "pino-http": "^8.2.1",
    "postgres-migrations": "^5.3.0",
    "swagger-ui-express": "^4.6.0",
    "tinypg": "^7.0.0"
  }
}
