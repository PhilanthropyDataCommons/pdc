{
  "name": "@pdc/service",
  "version": "0.3.0",
  "description": "The service backend for the Philanthropy Data Commons",
  "main": "dist/index.js",
  "scripts": {
    "build": "npm run cleanup && npm run build:node && npm run build:assets",
    "build:node": "tsc -p tsconfig.json",
    "build:assets": "copyfiles -u 1 \"src/**/*.sql\" \"src/**/.keep\" \"src/public/**\" dist",
    "cleanup": "rimraf dist",
    "lint": "npm run lint:ts && npm run lint:swagger",
    "lint:ts": "eslint ./src --ext .ts",
    "lint:swagger": "swagger-spec-validator src/openapi.json",
    "migrate": "node -r dotenv/config dist/scripts/migrate.js",
    "migrate:dev": "ts-node -r dotenv/config src/scripts/migrate.ts | pino-pretty",
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "jest --config=jest.config.unit.js",
    "test:integration": "jest --config=jest.config.int.js --runInBand",
    "test:ci": "jest --config=jest.config.ci.js --runInBand",
    "start": "node dist/index.js",
    "start:dev": "ts-node src/index.ts | pino-pretty"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/PhilanthropyDataCommons/pdc.git"
  },
  "keywords": [
    "Philanthropy",
    "Common",
    "Application",
    "Grant",
    "Management",
    "System"
  ],
  "author": "Open Tech Strategies",
  "license": "AGPL-3.0",
  "bugs": {
    "url": "https://github.com/PhilanthropyDataCommons/pdc/issues"
  },
  "homepage": "https://github.com/PhilanthropyDataCommons/pdc#readme",
  "engines": {
    "node": "18"
  },
  "type": "commonjs",
  "devDependencies": {
    "@tsconfig/node18": "^18.2.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^28.1.2",
    "@types/node": "^18.19.4",
    "@types/pg": "^8.10.9",
    "@types/supertest": "^6.0.2",
    "@types/swagger-ui-express": "^4.1.6",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "copyfiles": "^2.4.1",
    "eslint": "^8.56.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-sort-exports": "^0.8.0",
    "jest": "^28.1.1",
    "mock-jwks": "^1.0.10",
    "nock": "^13.4.0",
    "pino-pretty": "^10.2.3",
    "rimraf": "^5.0.5",
    "supertest": "^6.3.3",
    "swagger-spec-validator": "^5.0.0",
    "ts-jest": "^28.0.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.484.0",
    "@aws-sdk/s3-presigned-post": "^3.484.0",
    "ajv": "^8.12.0",
    "ajv-keywords": "^5.1.0",
    "cors": "^2.8.5",
    "csv-parse": "^5.5.3",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-jwt": "^8.4.1",
    "graphile-worker": "^0.16.1",
    "jwks-rsa": "^3.1.0",
    "pino": "^8.17.2",
    "pino-http": "^9.0.0",
    "postgres-schema-migrations": "^6.1.0",
    "require-env-variable": "^4.0.2",
    "swagger-ui-express": "^5.0.0",
    "tinypg": "^7.0.0",
    "tmp-promise": "^3.0.3",
    "uuid": "^9.0.1"
  }
}
